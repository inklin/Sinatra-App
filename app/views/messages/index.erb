<h1> All Messages</h1>
<hr/>

<% @messages.each do |message| %>
  <div class="message">
    <p>
      <%= message.content %>
    </p>
    <h3>
      <a href="/messages/<%= message.id %>">
        <small>(by: <%= message.author %>)</small>
      </a>
    </h3>
  </div>
<% end %>

<hr/>
<a href="/messages/new">Post a message... It's FREE (for now)!</a>